<!DOCTYPE html>
<html lang="es">

<head>
	{% block head %}
		{% include 'header.html.twig' %}
	{% endblock %}

	<title> {% block title %}{% endblock %} </title>
</head>
<body>
	<div class="header">
		<div class="container">
			<header style="height: 50px">
				{% include 'nav.html.twig' %}
			</header>
			<div class="row">
				{% if message %}
					{% if tipo == 'success' %}
						<div class="alert alert-success" style="margin-bottom: -50px;">
							<strong>{{ message }}</strong>
						</div>
					{% else %}
						<div class="alert alert-warning" style="margin-bottom: -50px;">
					 		<strong>{{ message }}</strong>
						</div>
					{% endif %}
				{% endif %}

				{% block container %}{% endblock %}
			</div>
		</div>
</body>
	</div>
	<footer>
		{% block footer %} {% endblock %}
	</footer>
</html>


